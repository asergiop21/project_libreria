<tr class="line2">
  <td class="col-md-6">
  <%= f.input( :name, label: false, :autofocus => true, input_html: {
    class: 'form-control name ',
    data: {'autocomplete-field' => true,
            'autocomplete-for' => '#invoice_orders_#{id}_article_id',
            'autocomplete-url' => articles_path(format: :json)
  } 
  }) %>
  <%= f.input :article_id, :input_html => {class: 'form-control'} , as: :hidden, label: false%>
  </td>
  <td class="col-md-2">
    <%= f.input :quantity, label: false, as: :string, :input_html => {:class => "form-control quantity", :value=>1}  %>
  </td>
  <td class="col-md-1">
  <%= f.input :discount, label: false, as: :string, :input_html => {:class => "form-control discount"}  %>
  </td>
  <td>
  <%= f.input :price_unit, label: false, as: :string, :input_html => {:class => "form-control price_unit price_unit_add "}  %>
  </td>
  <td>
  <%= f.input :price_total, label: false, as: :string, :input_html => {:class => "form-control price_subtotal"} %>
  </td>
  <td>
  <%= f.hidden_field :_destroy %>
  <%= link_to "X", "#", class: "remove_fields_orders" %>
  </td>

</tr>
